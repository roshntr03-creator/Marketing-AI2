{
  "functions": {
    "source": "firebase/functions"
  },
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      ".firebaserc",
      "firebase/**",
      "*.md",
      "*.log"
    ],
    "headers": [
      {
        "source": "**/*.{tsx,ts}",
        "headers": [
          {
            "key": "Content-Type",
            "value": "application/javascript; charset=utf-8"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}